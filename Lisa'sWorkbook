import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        int K = sc.nextInt();
        
        int[] problemsPerChapter = new int[N];
        
        for (int i = 0; i < N; i++) {
            problemsPerChapter[i] = sc.nextInt();
        }
        
        int currentPage = 0;
        
        int specialProblems = 0;
        
        
        for (int i = 0; i < N; i++) {
            currentPage++;
            int totalProblems = problemsPerChapter[i];
            
            int currentProblem = 1;
            
            int problemLimit = K;
            
            while (currentProblem <= totalProblems) {
                
                if (currentProblem == currentPage) {
                    specialProblems++;
                }
                
                currentProblem++;
                
                problemLimit--;
                
                if (problemLimit == 0 && currentProblem <= totalProblems) {
                    currentPage++;
                    problemLimit = K;
                }
            }
        }
        
        System.out.print(specialProblems);
        
    }
}
 
